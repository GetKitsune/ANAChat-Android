<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginEnd="16dp"
    android:layout_marginLeft="120dp"
    android:layout_marginRight="16dp"
    android:layout_marginStart="120dp"
    android:layout_marginTop="3dp">

    <LinearLayout
        android:id="@id/bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_chat_buuble_outgoing"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="start"
            android:paddingLeft="28dp"
            android:paddingStart="28dp"
            android:paddingRight="26dp"
            android:paddingEnd="26dp"
            android:textColor="@color/text_color_chat_input"
            android:textSize="14sp" />

        <TextView
            android:id="@id/messageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingEnd="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="8dp"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:textColor="@color/text_color_chat_time"
            android:textSize="10sp" />

    </LinearLayout>

    <ImageView
        android:id="@id/iv_triangle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/bubble"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="-2dp"
        android:src="@drawable/bg_right_trinagle"
        android:tint="@color/black" />

</RelativeLayout>