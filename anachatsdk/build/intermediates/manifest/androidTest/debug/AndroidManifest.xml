<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nowfloats.chatsdk.library.test" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="26" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for com.nowfloats.chatsdk.library.test"
        android:targetPackage="com.nowfloats.chatsdk.library.test" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.anachat.chatsdk.uimodule.ui.MediaPreviewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.anachat.chatsdk.uimodule.ui.PictureViewerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.anachat.chatsdk.uimodule.ui.VideoViewerActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.anachat.chatsdk.uimodule.AnaChatActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>